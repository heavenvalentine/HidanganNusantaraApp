<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IndonesianFood" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorOnPrimary">@color/darkYellow</item>
        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="FontColor">
        <item name="android:textColor">@color/darker_Grey</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/darker_Grey</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_toEndOf">@id/img_item_photo</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/darker_Grey</item>
    </style>

    <style name="Description">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">5</item>
    </style>
</resources>